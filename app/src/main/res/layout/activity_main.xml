<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMoManHinhCheKhuatToanBo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moManHinhCheHetToanBo"
        android:text="Mở một màn hình che khuất toàn bộ" />

    <Button
        android:id="@+id/btnManHinhCheKhuatMotPhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moManHinhCheKhuatMotPhan"
        android:text="Mở Màn hình che khuất một phần" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mời bạn nhập cái gì đó"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moManHinhXuLy"
        android:text="mở màn hình và gửi dữ liệu" />

    <EditText
        android:id="@+id/edtSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập vào một số"
        android:inputType="number" />

    <Button
        android:id="@+id/btnTimUocSo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="timUocSo"
        android:text="Tìm ước số" />

    <ListView
        android:id="@+id/lvUocSo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>